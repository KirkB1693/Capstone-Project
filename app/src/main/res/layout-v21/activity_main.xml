<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_background"
        tools:context=".ui.main.MainActivity">

        <ImageView
            android:id="@+id/cityIV"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:contentDescription="@string/picture_of_preferred_city_content_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/ballpark_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/simulateGameButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:enabled="false"
            android:text="@string/simulate_game_button_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startGameButton" />

        <Button
            android:id="@+id/standingsButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:enabled="false"
            android:text="@string/standings_button_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simulateGameButton" />

        <TextView
            android:id="@+id/userNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:contentDescription="@string/city_name_for_preferred_team_content_desc"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/cityIV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cityIV"
            tools:text="User/GM Name" />

        <TextView
            android:id="@+id/nextGameLabelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/next_game_label_content_desc"
            android:text="@string/next_game_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityIV" />

        <TextView
            android:id="@+id/homeTeamNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="@+id/homeCityTV"
            app:layout_constraintStart_toStartOf="@+id/homeCityTV"
            app:layout_constraintTop_toBottomOf="@+id/homeCityTV"
            tools:text="Home Team Name" />

        <TextView
            android:id="@+id/visitingTeamNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="@+id/visitingCityTV"
            app:layout_constraintStart_toStartOf="@+id/visitingCityTV"
            app:layout_constraintTop_toTopOf="@+id/homeTeamNameTV"
            tools:text="Visiting Team Name" />

        <TextView
            android:id="@+id/visitingTeamWLTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="@+id/visitingTeamNameTV"
            app:layout_constraintStart_toStartOf="@+id/visitingTeamNameTV"
            app:layout_constraintTop_toBottomOf="@+id/visitingTeamNameTV"
            tools:text="0 - 0" />

        <TextView
            android:id="@+id/homeTeamWLTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="@+id/homeTeamNameTV"
            app:layout_constraintStart_toStartOf="@+id/homeTeamNameTV"
            app:layout_constraintTop_toBottomOf="@+id/homeTeamNameTV"
            tools:text="0 - 0" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/homeTeamLogoIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image_available"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/homeTeamNameTV"
            app:layout_constraintStart_toStartOf="@+id/homeTeamNameTV"
            app:layout_constraintTop_toBottomOf="@id/homeTeamWLTV"
            android:contentDescription="@string/main_home_team_logo_content_description" />

        <ImageView
            android:id="@+id/visitingTeamLogoIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image_available"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/visitingTeamNameTV"
            app:layout_constraintStart_toStartOf="@id/visitingTeamNameTV"
            app:layout_constraintTop_toBottomOf="@id/visitingTeamWLTV"
            android:contentDescription="@string/main_visiting_team_logo_content_description" />

        <TextView
            android:id="@+id/homeStarterTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toEndOf="@+id/homeTeamNameTV"
            app:layout_constraintStart_toStartOf="@+id/homeTeamNameTV"
            app:layout_constraintTop_toBottomOf="@+id/homeTeamLogoIV"
            tools:text="Home Starting Pitcher" />

        <TextView
            android:id="@+id/visitingStarterTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toEndOf="@id/visitingTeamNameTV"
            app:layout_constraintStart_toStartOf="@id/visitingTeamNameTV"
            app:layout_constraintTop_toBottomOf="@+id/visitingTeamLogoIV"
            tools:text="Visiting Starting Pitcher" />

        <TextView
            android:id="@+id/homeStarterStatsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toEndOf="@+id/homeTeamNameTV"
            app:layout_constraintStart_toStartOf="@+id/homeTeamNameTV"
            app:layout_constraintTop_toBottomOf="@+id/homeStarterTV"
            tools:text="ERA : 3.14  WHIP 1.25" />

        <TextView
            android:id="@+id/visitingStarterStatsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toEndOf="@id/visitingTeamNameTV"
            app:layout_constraintStart_toStartOf="@id/visitingTeamNameTV"
            app:layout_constraintTop_toBottomOf="@id/visitingStarterTV"
            tools:text="ERA : 3.14  WHIP 1.25" />

        <TextView
            android:id="@+id/vsLabelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="@string/vs_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toBottomOf="@+id/homeTeamWLTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/homeTeamWLTV" />

        <View
            android:id="@+id/separatorV"
            style="@style/Divider"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeStarterStatsTV" />

        <Button
            android:id="@+id/editLineupButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:enabled="false"
            android:text="@string/edit_lineup_button_label"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separatorV" />

        <Button
            android:id="@+id/coachSetsLineupButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:enabled="false"
            android:text="@string/have_coach_set_lineup_button_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/editLineupButton" />

        <Button
            android:id="@+id/startGameButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:enabled="false"
            android:text="@string/start_game_button_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coachSetsLineupButton" />

        <TextView
            android:id="@+id/homeCityTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nextGameLabelTV"
            tools:text="Home City Name" />

        <TextView
            android:id="@+id/visitingCityTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/homeCityTV"
            tools:text="Visiting City Name" />

        <android.support.v7.widget.CardView
            android:id="@+id/gameScoresCV"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/primaryColor"
            android:elevation="5dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityIV">


            <LinearLayout
                android:id="@+id/gameScoresContainerLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/gameScoresHomeTeamLL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/gameScoresHomeCityTV"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center|bottom"
                        android:textColor="@color/primaryTextColor"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeMaxTextSize="100sp"
                        app:autoSizeStepGranularity="4sp"
                        android:singleLine="true"
                        tools:text="San Diego" />
                    <TextView
                        android:id="@+id/gameScoresHomeTeamNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center|top"
                        android:textColor="@color/primaryTextColor"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeMaxTextSize="100sp"
                        app:autoSizeStepGranularity="4sp"
                        android:singleLine="true"
                        tools:text="Padres" />
                    <TextView
                        android:id="@+id/gameScoresHomeScoreTV"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textColor="@color/primaryTextColor"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="28sp"
                        app:autoSizeMaxTextSize="100sp"
                        app:autoSizeStepGranularity="2sp"
                        android:singleLine="true"
                        tools:text="4" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gameScoresVisitorLayoutLL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/gameScoresVisitorCityTV"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center|bottom"
                        android:textColor="@color/primaryTextColor"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeMaxTextSize="100sp"
                        app:autoSizeStepGranularity="4sp"
                        android:singleLine="true"
                        tools:text="Atlanta" />
                    <TextView
                        android:id="@+id/gameScoresVisitorTeamNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center|top"
                        android:textColor="@color/primaryTextColor"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeMaxTextSize="100sp"
                        app:autoSizeStepGranularity="4sp"
                        android:singleLine="true"
                        tools:text="Braves" />
                    <TextView
                        android:id="@+id/gameScoresVisitorScoreTV"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textColor="@color/primaryTextColor"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="28sp"
                        app:autoSizeMaxTextSize="100sp"
                        app:autoSizeStepGranularity="2sp"
                        android:singleLine="true"
                        tools:text="1" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>



        <ProgressBar
            android:id="@+id/mainProgressBar"
            style="?android:attr/progressBarStyle"
            android:elevation="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>