<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together">
    <slide android:slideEdge="top"
        android:duration="5000">
        <targets >
            <target android:targetId="@+id/main_activity_cl"/>
        </targets>
    </slide>
    <fade android:duration="5000">
        <targets>
            <target android:targetId="@+id/mainHomeStarterTV"/>
            <target android:targetId="@+id/mainVisitingStarterTV"/>
            <target android:targetId="@+id/mainVsLabelTV"/>
            <target android:targetId="@+id/mainHomeStarterStatsTV"/>
            <target android:targetId="@+id/mainHomeTeamNameTV"/>
            <target android:targetId="@+id/mainNextGameLabelTV"/>
            <target android:targetId="@+id/mainVisitingStarterStatsTV"/>
            <target android:targetId="@+id/mainVisitingTeamNameTV"/>
            <target android:targetId="@+id/mainHomeTeamWLTV"/>
            <target android:targetId="@+id/visitingTeamWLTV"/>
            <target android:targetId="@+id/visitingCityTV"/>
            <target android:targetId="@+id/homeCityTV"/>
        </targets>
    </fade>
    <slide android:slideEdge="bottom"
        android:duration="5000">
        <targets >
            <target android:targetId="@+id/standingsButton"/>
            <target android:targetId="@+id/simulateGameButton"/>
            <target android:targetId="@+id/editLineupButton"/>
            <target android:targetId="@+id/coachSetsLineupButton"/>
            <target android:targetId="@+id/startGameButton"/>
            <target android:targetId="@+id/adView"/>
        </targets>
    </slide>
</transitionSet>