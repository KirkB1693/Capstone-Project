<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:id="@+id/pitching_rotation_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="5dp"
        android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

        <TextView
            android:id="@+id/pitching_rotation_place_in_order"
            style="@style/LineupPlayerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            tools:text="1) "
            android:layout_marginStart="5dp"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/pitching_rotation_place_in_order"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12">

                <TextView
                    android:id="@+id/pitching_rotation_name_of_player"
                    style="@style/LineupPlayerInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    tools:text="Joe Player"
                    android:text="Joe Player"/>

                <TextView
                    android:id="@+id/pitching_rotation_player_stats"
                    style="@style/LineupPlayerInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:textSize="12sp"
                    tools:text="ERA 3.60 , WHIP 1.40" />

                <TextView
                    android:id="@+id/pitching_rotation_position"
                    style="@style/LineupPlayerInfo"
                    android:layout_width="0dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    tools:text="SP"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="16">

                <TextView
                    android:id="@+id/pitching_rotation_stamina_label"
                    style="@style/BoxScoreData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:text="Stamina" />

                <TextView
                    android:id="@+id/pitching_rotation_accuracy_label"
                    style="@style/BoxScoreData"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:text="Accuracy" />

                <TextView
                    android:id="@+id/pitching_rotation_deception_label"
                    style="@style/BoxScoreData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:text="Deception" />

                <TextView
                    android:id="@+id/pitching_rotation_movement_label"
                    style="@style/BoxScoreData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:text="Movement" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="16">

                <ProgressBar
                    android:id="@+id/pitching_rotation_stamina_pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:max="100"
                    android:padding="7dp"
                    android:progress="100"
                    android:progressDrawable="@drawable/player_rating_bar_green" />

                <ProgressBar
                    android:id="@+id/pitching_rotation_accuracy_pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:max="100"
                    android:padding="7dp"
                    android:progress="100"
                    android:progressDrawable="@drawable/player_rating_bar_green" />

                <ProgressBar
                    android:id="@+id/pitching_rotation_deception_pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:max="100"
                    android:padding="7dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/player_rating_bar_yellow" />

                <ProgressBar
                    android:id="@+id/pitching_rotation_movement_pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:max="100"
                    android:padding="7dp"
                    android:progress="30"
                    android:progressDrawable="@drawable/player_rating_bar_red" />


            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/rotation_reorder_icon_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_reorder_500_black"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="2"
            android:layout_gravity="center"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>